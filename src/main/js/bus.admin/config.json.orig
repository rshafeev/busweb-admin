{
  "name"    : "bus.admin",

  "include" :
  [
    {
      "path" : "${QOOXDOO_PATH}/tool/data/config/application.json",
      "block" :
      [
        // need to define them locally, as the base.json versions fix qx.theme, QXTHEME, etc.
        "source",
        "source-hybrid",
        "build"
      ]
    }
  ],
  "default-job" : "source",
  
  "let" :
  {
    "APPLICATION"  : "bus.admin",
    "QOOXDOO_PATH" : "/opt/qooxdoo",
    "API_EXCLUDE"  : ["qx.test.*", "${APPLICATION}.theme.*", "${APPLICATION}.test.*", "${APPLICATION}.simulation.*"],
    "LOCALES"      : [ "en" ],
    "CACHE"        : "${TMPDIR}/qx${QOOXDOO_VERSION}/cache",
    "ROOT"         : ".",
    "BUILD_PATH"   : "${ROOT}/../../../../WebContent"
    
  },
  "config-warnings" : 
  {
    "job-shadowing" : ["source", "source-hybrid", "build-resources", "common", "simulation-run", "translation"],
    
    "environment" : [ "non-literal-keys" ]
  },

  // You only need to edit the remainder of this file, if you want to customize
  // specific jobs, or add own job definitions.

    "jobs" :
  {
    "source" :
    {
      "=run" : ["source-script-classic", "source-script-modern",  "source-script-simple", "source-script-indigo"]
    },

    "source-hybrid" :
    {
      "=run" : ["source-script-classic", "source-script-modern",  "source-script-simple", "source-script-indigo"]
    },

    "source-script-classic" :
    {
      "let"     : 
      { 
        "QXTHEME" : "bus.admin.theme.classic.Theme",
        "QXICONTHEME" : ["Oxygen"]
      },
      "extend"  : ["source-script"],
      "compile-options" : {
        "code" :
        {
          "except" : [ "*" ]
        },
        "paths" :
        {
          "gzip" : false,
          "file"  : "source/script/${APPLICATION}.classic.js"
        }
      }
    },

    "source-script-modern" :
    {
      "let"     : {"QXTHEME" : "bus.admin.theme.modern.Theme"},
      "extend"  : ["source-script"],
      "compile-options" : {
        "code" :
        {
          "except" : [ "*" ]
        },
        "paths" :
        {
          "file"  : "source/script/${APPLICATION}.modern.js"
        }
      }
    },

    "source-script-simple" :
    {
      "let"     : {"QXTHEME" : "bus.admin.theme.simple.Theme"},
      "extend"  : ["source-script"],
      "compile-options" : {
        "code" :
        {
          "except" : [ "*" ]
        },
        "paths" :
        {
          "file"  : "source/script/${APPLICATION}.simple.js"
        }
      }
    },

    "source-script-indigo" :
    {
    
      "let"     :	
       {
         "QXTHEME"      : "bus.admin.theme.indigo.Theme"
       },
      "extend"  : ["source-script"],
      "compile-options" : {
        "code" :
        {
          "except" : [ "*" ]
        },
        "paths" :
        {
          "file"  : "source/script/${APPLICATION}.indigo.js"
        }
      }
    },


    "build" :
    {
      "=run" : [
        "build-resources",
        "build-script-classic",
        "build-script-modern",
        "build-script-simple",
        "build-script-indigo",
        "build-files"
      ]

    },

    "build-files":
    {
      "let" : {"QXICONTHEME" : ["Oxygen", "Tango"]},
      "include" :
      [
      /*  "qx.theme.Classic",
        "qx.theme.Simple",
        "qx.theme.Modern",
        "qx.theme.Indigo"*/
      ],

      "copy-files" :
      {
        "target" : "${BUILD_PATH}"
      }
    },
    
    "build-resources":
    {
      "let" : {"QXICONTHEME" : ["Oxygen", "Tango"]},
      "include" :
      [
        "bus.admin.theme.classic.Theme",
        "bus.admin.theme.simple.Theme",
        "bus.admin.theme.modern.Theme",
        "bus.admin.theme.indigo.Theme"
      ],

      "copy-resources" :
      {
        "target" : "${BUILD_PATH}"
      }
    },

    "build-script-classic" :
    {
      "let"     :	
       {
         "QXTHEME"      : "bus.admin.theme.classic.Theme"
       },
      "extend"  : ["build-script"],
      "compile-options" : {
        "paths" :
        {
          "gzip" : false,
          "file": "./${BUILD_PATH}/script/${APPLICATION}.classic.js"
        }
      }
    },

    "build-script-modern" :
    {
      "let"     : { "QXTHEME"      : "bus.admin.theme.modern.Theme"},
      "extend"  : ["build-script"],
      "compile-options" : {
        "paths" :
        {
          "file": "./${BUILD_PATH}/script/${APPLICATION}.modern.js"
        }
      }
    },

    "build-script-simple" :
    {
      "let"     : { "QXTHEME"      : "bus.admin.theme.simple.Theme"},
      "extend"  : ["build-script"],
      "compile-options" : {
        "paths" :
        {
          "file": "./${BUILD_PATH}/script/${APPLICATION}.simple.js"
        }
      }
    },

    "build-script-indigo" :
    {
      "let"     : { "QXTHEME"      : "bus.admin.theme.indigo.Theme"},
      "extend"  : ["build-script"],
      "compile-options" : {
        "paths" :
        {
          "file": "./${BUILD_PATH}/script/${APPLICATION}.indigo.js"
        }
      }
    },


    "common" :
    {
      "library" : 
      [
        {
          "manifest" : "${QOOXDOO_PATH}/component/library/formdemo/Manifest.json"
        },
        {
          "manifest" : "${QOOXDOO_PATH}/component/library/versionlabel/Manifest.json"
        }
      ],
      "environment"  :
      {
        "qx.nativeScrollBars" : true
      },
      "packages" :
      {
        "parts" :
        {
          "boot" :
          {
            "include" : [ "${QXTHEME}", "bus.admin.Application" ]
          },
          "cities" :
          {
            "include" : [ "bus.admin.pages.Cities" ]
          },
          "stations" :
          {
            "include" : [ "bus.admin.pages.Stations" ]
          },
          "routes" :
          {
            "include" : [ "bus.admin.pages.Routes" ]
          }
          


        }
      }
    },

    "simulation-run" :
    {
      "environment" :
      {
        "simulator.selServer"   : "${SELENIUM_SERVER}",
        "simulator.selPort"     : "${SELENIUM_PORT}",
        "simulator.testBrowser" : "${SELENIUM_BROWSER}",
        "simulator.autHost"     : "${AUT_HOST}",
        "simulator.autPath"     : "${AUT_PATH}",
        "simulator.reportServer": "${SIMULATOR_REPORTSERVER}",
        "simulator.applicationLog" : true,
        "simulator.globalErrorLogging" : true
      }
    },
    
    "translation" :
    {
      "translate" : { "poentry-with-occurrences" : false  }
    }
    
    
  }

}
