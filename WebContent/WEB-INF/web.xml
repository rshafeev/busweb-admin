<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">
         
    
	<filter>
        <filter-name>springSecurityFilterChain</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter>

    <filter-mapping>
      <filter-name>springSecurityFilterChain</filter-name>
      <url-pattern>/*</url-pattern>
    </filter-mapping>
     
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    
    <listener>
       <listener-class>com.pgis.bus.admin.server.listeners.BasicServiceListener</listener-class>
    </listener>
    

    
  <!-- Servlets -->
  
  <servlet>
		<servlet-name>main</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class> 
        <load-on-startup>1</load-on-startup> 
  </servlet>
	
  <servlet>
    	<servlet-name>greet</servlet-name>
    	<servlet-class>com.pgis.bus.admin.server.servlets.GreetingServiceImpl</servlet-class>
  </servlet>
  
  <servlet>
		<servlet-name>auth</servlet-name>
		<servlet-class>com.pgis.bus.admin.server.servlets.AuthServiceImpl</servlet-class>
  </servlet>


<!-- Servlets mappint -->
  <servlet-mapping>
	<servlet-name>main</servlet-name>
	<url-pattern>/login</url-pattern>
	<url-pattern>/admin</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>greet</servlet-name>
    <url-pattern>/com.pgis.bus.admin/greet</url-pattern>
  </servlet-mapping>
  
	<servlet-mapping>
		<servlet-name>auth</servlet-name>
		<url-pattern>/com.pgis.bus.admin/auth</url-pattern>
	</servlet-mapping>
  
  <servlet-mapping>  
        <servlet-name>default</servlet-name>  
        <url-pattern>*.css</url-pattern>  
        <url-pattern>*.js</url-pattern>  
        <url-pattern>*.png</url-pattern>  
        <url-pattern>*.gif</url-pattern>  
        <url-pattern>*.jpg</url-pattern>  
        <url-pattern>*.swf</url-pattern>  
    </servlet-mapping>  
    
  <!-- Default page to serve -->
  
  <security-constraint>
        <web-resource-collection>
            <web-resource-name>JSP templates</web-resource-name>
            <url-pattern>*.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint/>
  </security-constraint>
  
     <welcome-file-list>
    <welcome-file>/WEB-INF/pages/index.jsp</welcome-file>
  </welcome-file-list>

</web-app>
